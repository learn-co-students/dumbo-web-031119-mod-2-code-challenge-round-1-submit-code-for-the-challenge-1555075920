<h1>New pizza</h1>
<% if @pizza.errors.any? %>
  <% @pizza.errors.full_messages.each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<%= form_for @pizza do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :ingredients %>
  List ingredients separated by a comma
  <%= f.text_field :ingredients %>
  <%= f.collection_select :restaurant_id, Restaurant.all, :id, :name %>
  <%= f.submit %>
<% end %>
