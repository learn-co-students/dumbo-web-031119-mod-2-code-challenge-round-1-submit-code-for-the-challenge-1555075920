<h1> Create your own pizza! </h1>

<%= form_for(@pizza) do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>
<%= f.label :ingredients %>
<%= f.text_field :ingredients %>
<%= f.collection_select :restaurant_id, Restaurant.all, :id, :name %>
<%= f.submit "Let's create the thing!" %>
<% end %>
