<ul>
<% @pizza.errors.full_messages.each do |mes| %>
<li>
<%= mes %>
</li>
<% end %>
</ul>

<%= form_for @pizza do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :ingredients %>
    <%= f.text_field :ingredients %>

    <%= f.collection_select(:restaurant_id, Restaurant.all, :id, :name) %>

    <%= f.submit %>
<% end %>