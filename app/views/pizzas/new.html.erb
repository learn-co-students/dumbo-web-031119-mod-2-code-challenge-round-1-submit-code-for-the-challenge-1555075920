<h1>Create Pizza</h1>

<% unless @pizza.errors.full_messages.empty? %>
  <p><%= @pizza.errors.full_messages %></p>
<% end %>

<%= form_for @pizza do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :ingredients %>
<%= f.text_field :ingredients %>
<%= f.label :restaurant_id %>
<%= f.number_field :restaurant_id %>

<%= f.submit "Submit Pizza" %>

<% end %>
