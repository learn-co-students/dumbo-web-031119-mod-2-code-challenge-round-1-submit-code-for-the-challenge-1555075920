<h1 style='margin-top:100px;font-size:2rem'>Our official restaurant directory</h1>

<form>
  <label for="search-term">Search Term</label>
  <input id="search-term" type="text" name="query" value=""/>
  <input type="submit" name="" value="Submit"/>
</form>

<% @restaurants.each do |restaurant| %>
  <h1 style='font-size:1.5rem;margin-top:50px'>
      <%= link_to restaurant.name, restaurant %>
  </h1>
  <p>Address: <%= restaurant.address %></p>
<% end %>
