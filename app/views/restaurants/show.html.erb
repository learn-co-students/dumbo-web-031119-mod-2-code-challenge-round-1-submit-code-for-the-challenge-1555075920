<h1 style='margin-top:100px;font-size:2rem'>
 <%= @restaurant.name %> 
 </h1>

 <h1 style='font-size:1.5rem;margin-top:50px'>
 <%= @restaurant.address %>
 </h1>



 <h1 style='font-size:1.5rem;margin-top:50px'>
 List of Pizzas:
 </h1>
 <ul>
 <% @restaurant.pizzas.each do |pie| %>
    <li>
    <%= link_to pie.name, pizzas_path(pie) %>
    </li>
<% end %>
</ul>






